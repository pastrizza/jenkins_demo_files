pipeline {
    agent { label 'docker-slave-ssh' }
    stages {
        stage('Checkout'){
            steps {
                sh '''
                    git clone https://github.com/jenkinsci/prometheus-plugin project
                    cd project
                    git checkout prometheus-2.0.10
                '''
            }
        }
        stage('Build'){
            steps{
                sh 'echo "Building..."'
                sh ''' 
                    cd project
                    mvn clean install
                    mvn hpi:hpi
                '''
                sh 'echo Complete'
            }
        }
        stage('Test'){
            steps{
                sh 'echo "Testing..."'
                sh '''
                    cd project
                    mvn test
                    mvn spotbugs:check
                '''
                sh 'echo Complete'
            }
        }
    }
    post {
            always{
                archiveArtifacts 'project/target/**/*.jar'
            }
        }
}